= render "toppages/header"

.main
  .showMain
    .contentLeftqq
    .contentRight
      .topContent
        .itemBox
          %h2.itemBox__name
            商品名 
            = @item.item_name
          .itemBox__body
            %ul.ul1
              = render partial: 'item' ,locals: {item: @item}, class:"image1"
            %ul.ul2
              - @item.images.each do |image|
                %li.li1
                  = image_tag image.src.url, class: "image2"
          .itemBox__price
            %span1
              = @item.price 
              円
            .priceDetail
              %span
                (税込み)
              %span
                送料込み
          .itemDetail
            
          .table
            %table
              %tr
                %th 出品者
                %td 
                  -# = @item.nickname
              %tr
                %th カテゴリー
                %td 
                  = link_to "#" do
                    ベビー・キッズ
                  %br/
                  = link_to "#" do
                    ベビー服（男の子用) ~95cm
                  %br/
                  = link_to "#" do
                    アウター
                  %br/
              %tr
                %th ブランド
                %td
              %tr
                %th 商品のサイズ
                %td 
              %tr
                %th 商品の状態
                %td 未使用に近い
              %tr
                %th 配送料の負担
                %td 送料込み（出品者負担）
              %tr
                %th 発送元の地域
                %td 
                  = link_to "#" do
                    北海道
                  %br/
              %tr
                %th 発送元の目安
                %td 4-7日で発送
          .optionalArea 
            %ul
              %li.likeBtn#likeBtn
                %i.fa.fa-star 
                  お気に入り 0
            %ul.optional
              %li.optionalBtn 
                = link_to "#" do
                  %i.fa.fa-flag
                  不適切な商品の通報
          -if user_signed_in? && current_user.id == @item.seller
            .my_page_btn
              = link_to edit_item_path, class:"edit_btn" do
                商品の編集
              = link_to "#", class: "destroy_btn" do
                商品の削除
          -elsif user_signed_in? && current_user.id != @item.seller
            .purchase
              = link_to edit_item_path, class:"purchase_btn" do
                商品の購入
            
        .commentBox
          %ul.commentContents
          = form_with url:"#", local: true, class: "new_comment" do |f|
            = f.text_area :comment,class: "textarea"
            %p.noticeMsg
              相手のことを考え丁寧なコメントを心がけましょう
              %br/
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
            = f.submit 'コメントする',class: 'commentBtn' do
              %i.fa.fa-comment
              コメントする
      %ul.links
        %li.right
          = link_to "#" do
            %i.fa.fa-angle-left
            %span
              前の商品
        %li.left
          = link_to "#" do
            %span 
              後ろの商品
            %i.fa.fa-angle-right
      .relatedItems
        =link_to "#" do
          ベビー・キッズをもっと見る
      .productLists
        .productList
          = link_to "/products/8", class: 'link' do
            %figure.productList--img
              = image_tag 'a007.png', alt: 'sakana', class: 'img'
              .productList--body
                %h3.name product3
                .details
                  %ul
                    %li 3000円
                    %li
                      %i.fa.fa-star.lekeIcon 0
                  %p 税込

= render "toppages/footer"

= render "toppages/purchaseBtn"